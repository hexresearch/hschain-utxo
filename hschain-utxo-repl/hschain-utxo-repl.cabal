  build-depends:       base >=4.11 && <5
                     , data-fix
                     , haskeline
                     , hex-common
                     , hs-check
                     , hschain-utxo-lang
                     , mtl
                     , process
                     , repline >= 0.2.1.0
                     , safe
                     , text
                     , vector

  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:
    FlexibleContexts
    GeneralizedNewtypeDeriving
    LambdaCase
    MultiParamTypeClasses
    TypeFamilies
    OverloadedStrings
    RecordWildCards
    TemplateHaskell
    TupleSections

executable hschain-utxo-repl
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  hs-source-dirs:      app
  build-depends:       base >=4.11 && <5
                     , hschain-utxo-repl
