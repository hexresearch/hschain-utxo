build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Hschain.Utxo.Repl
                       Hschain.Utxo.Repl.Cmd
                       Hschain.Utxo.Repl.Eval
                       Hschain.Utxo.Repl.Monad
  -- other-modules:
